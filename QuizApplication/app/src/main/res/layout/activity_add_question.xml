<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddQuestionActivity"
    android:background="#FFEAA4"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFEAA4"/>
    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="850dp"
        android:background="@drawable/backgroundadmin"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="70dp">

            <EditText
                android:id="@+id/inputQuestion"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/round_border_question"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Question"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#DF03082B"
                android:textColorHint="#DF03082B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/inputOption1"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="130dp"
                android:background="@drawable/round_border_question"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Option 1"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#DF03082B"
                android:textColorHint="#DF03082B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:thumb="@drawable/thumb"
                app:track="@drawable/track"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/inputOption2"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="130dp"
                android:background="@drawable/round_border_question"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Option 2"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#DF03082B"
                android:textColorHint="#DF03082B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:thumb="@drawable/thumb"
                app:track="@drawable/track"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/inputOption3"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="130dp"
                android:background="@drawable/round_border_question"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Option 3"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#DF03082B"
                android:textColorHint="#DF03082B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:thumb="@drawable/thumb"
                app:track="@drawable/track"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/inputOption4"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="130dp"
                android:background="@drawable/round_border_question"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Option 4"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="#DF03082B"
                android:textColorHint="#DF03082B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="5dp"
                android:thumb="@drawable/thumb"
                app:track="@drawable/track"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:hint="@string/select_level"
                app:hintEnabled="true"
                app:hintTextColor="@android:color/black"
                android:background="@drawable/round_border_question"
                app:boxBackgroundColor="#f9fbfc"
                app:boxStrokeColor="#44c6ee"
                app:startIconTint="#44c6ee"
                app:endIconTint="#44c6ee"
                app:shapeAppearanceOverlay = "@style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox"
                >

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_level"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:hint="@string/select_level"
                    android:inputType="none"
                    android:paddingBottom="7dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:hint="@string/select_topic"
                app:hintEnabled="true"
                app:hintTextColor="@android:color/black"
                android:background="@drawable/round_border_question"
                app:boxBackgroundColor="#f9fbfc"
                app:boxStrokeColor="#44c6ee"
                app:startIconTint="#44c6ee"
                app:endIconTint="#44c6ee"
                app:shapeAppearanceOverlay = "@style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox"
                >
                <AutoCompleteTextView
                    android:id="@+id/auto_complete_topic"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="7dp"
                    android:layout_gravity="center"
                    android:hint="@string/select_topic"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btnSubmitQ"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_bg"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
           />


    </LinearLayout>

</LinearLayout>